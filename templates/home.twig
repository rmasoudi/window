{% block scripts %}
<script type="text/javascript">
    $(document).ready(function (){
        $('.topBar').css("background-color","#8c8c8c54");
        $(window).scroll(function(){
          var scroll = $(window).scrollTop();
          if (scroll >= 80)
              $('.topBar').addClass('topBarMoving');
          else
              $('.topBar').removeClass('topBarMoving');
        });    
    });
</script>
{% endblock %}

{% block slider %}
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="2800">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">

                <img class="d-block w-100" src="images/slide1.jpg" alt="First slide">
                <div class="carousel-caption">
                    <h5 class="sliderTitle">بهترین مترجم رسمی را انتخاب کنید</h5>
                    <p class="sliderDesc d-none d-md-block">امکان انتخاب نزدیک ترین، محبوب ترین و سریعترین مترجم رسمی</p>
                </div>
            </div>
            <div class="carousel-item">

                <img class="d-block w-100" src="images/slide5.jpg" alt="Second slide">
                <div class="carousel-caption">
                    <h5 class="sliderTitle">آسان، سریع و مطمئن</h5>
                    <p class="sliderDesc d-none d-md-block">{{app_name}} اولین سامانه متمرکز ترجمه رسمی آنلاین</p>
                </div>
            </div>
           <div class="carousel-item">

                <img class="d-block w-100" src="images/slide7.jpg" alt="Second slide">
                <div class="carousel-caption">
                    <h5 class="sliderTitle">آسان، سریع و مطمئن</h5>
                    <p class="sliderDesc d-none d-md-block">{{app_name}} اولین سامانه متمرکز ترجمه رسمی آنلاین</p>
                </div>
            </div>      
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
