{% extends 'base.twig' %}

{% block title %}ویرایش پروفایل {{user.name}}{% endblock %}

{% block scripts %}
<script type="text/javascript">
    $(document).ready(function() {
        $("#name").focus();
        window.addEventListener('load', function() {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    });
</script>
{% endblock %}


{% block content %}
<form class="needs-validation" style="margin-top: 100px;text-align: right;" method="post" action="update_user" novalidate>
    <div class="form-group row">
        <label  for="name" class="col-sm-2 col-form-label">نام کامل</label>
        <div class="col-sm-10">
            <input required name="name" type="text" class="form-control" id="name" value="{{user.name}}">
            <div class="invalid-feedback">
                لطفا نام کامل خود را وارد کنید
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">رایانامه</label>
        <div class="col-sm-10">
            <input required name="mail" type="email" class="form-control" id="staticEmail">
            <div class="invalid-feedback">
                لطفا آدرس رایانامه را به درستی وارد کنید
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">رمز</label>
        <div class="col-sm-10">
            <input required name="password" type="password" class="form-control" id="inputPassword"  pattern=".{4,10}">
            <div class="invalid-feedback">
                لطفا رمز خود را به درستی وارد کنید. رمز باید بین 4 تا 10 کاراکتر باشد
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="phone" class="col-sm-2 col-form-label">موبایل</label>
        <div class="col-sm-10">
            <input required name="mobile" type="text" class="form-control" id="phone" pattern=".{11,11}" value="{{user.mobile}}">
            <div class="invalid-feedback">
                لطفا شماره موبایل خود را به درستی وارد کنید مثلا 09125556666
            </div>
        </div>
    </div>
    <div class="error">{{error}}</div>
    <button type="submit" class="btn btn-primary topButton">ثبت </button>
</form>
{% endblock %}