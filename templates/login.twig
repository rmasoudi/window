{% extends 'base.twig' %}

{% block title %}ورود به سیستم ترجمه رسمی آنلاین{% endblock %}

{% block scripts %}
<script type="text/javascript">
    $(document).ready(function() {
        $("#name").focus();
        window.addEventListener('load', function() {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    });
</script>
{% endblock %}


{% block content %}
<form class="needs-validation" style="margin-top: 100px;text-align: right;" method="post" action="dologin" novalidate>

    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">رایانامه</label>
        <div class="col-sm-10">
            <input required name="mail" type="email" class="form-control" id="staticEmail">
            <div class="invalid-feedback">
                لطفا آدرس رایانامه را به درستی وارد کنید
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">رمز</label>
        <div class="col-sm-10">
            <input required name="password" type="password" class="form-control" id="inputPassword">
            <div class="invalid-feedback">
                لطفا رمز خود را به درستی وارد کنید
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
            <div class="error">{{error}}</div>
            <input style="display: none;" name="redirect" value="{{redirect}}" />
            <button type="submit" class="formButton btn btn-primary topButton">ورود</button>
            <a href="forget"> <div class="formButton btn btn-primary topButton">رمز را فراموش کردم</div></a>
    </div>
</form>
{% endblock %}